container_commands:
  01_create_upload_directories:
    command: |
      mkdir -p /var/app/current/uploads
      mkdir -p /var/app/current/public/uploads
      chmod 755 /var/app/current/uploads
      chmod 755 /var/app/current/public/uploads
    ignoreErrors: true

  02_set_permissions:
    command: |
      chown -R webapp:webapp /var/app/current/uploads
      chown -R webapp:webapp /var/app/current/public/uploads
    ignoreErrors: true 