files:
  "/etc/cron.d/cleanup_files":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Run cleanup every 6 hours
      0 */6 * * * root /usr/bin/curl -s http://localhost/api/process/cleanup > /dev/null 2>&1

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/cleanup_files.bak" 