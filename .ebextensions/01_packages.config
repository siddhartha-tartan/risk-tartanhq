packages:
  yum:
    python3: []
    python3-pip: []
    python3-devel: []
    gcc: []
    git: []
    nodejs: []

commands:
  01_install_python_dependencies:
    command: "pip3 install --upgrade pip && pip3 install -r scripts/requirements.txt && pip3 install -r requirements.txt"
  02_node_setup:
    command: "curl -sL https://rpm.nodesource.com/setup_16.x | bash -"
  03_npm_update:
    command: "npm install -g npm@latest" 